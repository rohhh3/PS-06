@page
@model IndexModel
@{
    ViewData["Title"] = "Fizz Buzz";
}
<div class="text-left">
    <h1 class="display-4">Welcome</h1>
    <form method="post" autocomplete="off">
        <div class="form-group">
            <label asp-for="FizzBuzz.Year"></label>
            <input asp-for="FizzBuzz.Year" class="form-control" />
            <span asp-validation-for="FizzBuzz.Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FizzBuzz.Name"></label>
            <input asp-for="FizzBuzz.Name" class="form-control" type="text" />
            <span asp-validation-for="FizzBuzz.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
    </form>
    @if (Model.FizzBuzz != null)
    {
        <p>
            @Model.FizzBuzz.Name urodził się w @Model.FizzBuzz.Year roku. Był to
            @ViewData["Year"]
        </p>
    }
</div>
